{
    "@type":"html",
    "@content": [
        {
            "@type": "head",
            "@content": {
                "@type": "title",
                "@content": "Div Align Attribute"     
            }
        },
        {
            "@type": "body",
            "@content": {
                "@type": "@for",
                "@var": "align",
                "@in": ["left","right","center","justify"],
                "@content": {
                    "@type":"div",
                    "align": "${align}",
                    "@content":"I am a div and my alignment is ${align}."
                }
            }
        }
    ]
}

